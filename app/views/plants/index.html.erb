<div class="container page-container">
  <div class="row">
    <div class="col">
      <h1 class="text-center page-title">Plants from our community of interior gardeners</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <% @plants.each do |plant| %>
      <div class="plant">
        <%= link_to plant_path(plant) do %>
          <div class="bg-image plant-cover" style="background-image: url('<%= plant.photo_url %>')"></div>
        <% end %>
        <p class="plant-owner">by <%= plant.owner.nickname %></p>
      </div>
    <% end %>
  </div>
</div>
